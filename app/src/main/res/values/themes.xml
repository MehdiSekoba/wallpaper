<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Wallpaper" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->


    </style>

    <style name="Theme.Wallpaper" parent="Base.Theme.Wallpaper">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="Q">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="materialAlertDialogTheme">@style/AlertDialog</item>
        <item name="colorSurfaceInverse">@color/transparent</item>
        <item name="colorOnSurfaceInverse">@color/transparent</item>
        <item name="colorPrimaryInverse">@color/transparent</item>
        <item name="colorSecondaryContainer">@color/white</item>
        <item name="colorSurface">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">true</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="chipStyle">@style/ChipStyleTag</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>


    </style>
    <!--TextSize||fontBold-->
    <style name="TextAppearance_Bold">
        <item name="android:textSize">@dimen/_14font_mdp</item>
        <item name="fontPath">fonts/NunitoSans_SemiBold.ttf</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--TextSize||fontMedium-->
    <style name="TextAppearance_medium">
        <item name="android:textSize">@dimen/_12font_mdp</item>
        <item name="fontPath">fonts/NunitoSans_Medium.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--TextSize||fontSmall-->
    <style name="TextAppearance_small">
        <item name="android:textSize">@dimen/_10font_mdp</item>
        <item name="fontPath">fonts/NunitoSans_Light.ttf</item>
        <item name="android:textStyle">normal</item>
    </style>
    <!--Round ImageView-->
    <style name="RoundImageViewProfile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5%</item>
    </style>
    <!--MaterialDialog-->
    <style name="AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeDialog</item>
    </style>

    <style name="ShapeDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12%</item>
    </style>

    <!--chip style-->
    <style name="ChipStyleTag" parent="Widget.Material3.Chip.Input">
        <item name="chipBackgroundColor">@color/gray_200</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipStrokeColor">@android:color/transparent</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipIconEnabled">false</item>
        <item name="chipIcon">@null</item>
        <item name="closeIconVisible">false</item>
        <item name="closeIconEnabled">false</item>
    </style>
    <!--SearchViewStyle -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/search</item>
        <item name="closeIcon">@drawable/close_circle</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="searchHintIcon">@drawable/search</item>
        <item name="textFillColor">@color/gray_700</item>
    </style>

    <style name="TextAppearance.App.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textAppearance">@style/TextAppearance_medium</item>
        <item name="itemTextColor">@color/Raisin_Black</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_6mdp</item>
    </style>

    <style name="themeProgressbar">
        <item name="colorAccent">@color/darkStrategy</item>
    </style>


</resources>